<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_pi_fu_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/pi_fu_0" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#88000000" />

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wang_yi_yun_bar_bg_color"
        android:orientation="horizontal"
        android:paddingTop="22dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_choose_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="多重选择"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:gravity="center"
            android:minWidth="?actionBarSize"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="全选"
            android:textColor="@color/white"
            android:visibility="gone" />


    </LinearLayout>


    <include
        android:id="@+id/layout_player"
        layout="@layout/layout_player"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_player"
        android:layout_below="@id/ll_top">

        <LinearLayout
            android:id="@+id/ll_bottom_menu"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true"
            android:background="@color/wang_yi_yun_bar_bg_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_next_play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/touch_bg"
                android:gravity="center"
                android:text="下一曲播放"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_add_to"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/touch_bg"
                android:gravity="center"
                android:text="添加到"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_all_choose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/touch_bg"
                android:gravity="center"
                android:text="全选"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_fan_choose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/touch_bg"
                android:gravity="center"
                android:text="反选"
                android:textColor="@color/white" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/ll_bottom_menu" />

    </RelativeLayout>


</RelativeLayout>