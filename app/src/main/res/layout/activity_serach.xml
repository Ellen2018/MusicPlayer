<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_pi_fu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/pi_fu_0" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#88000000" />

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="#883e3e3e" />

    <RelativeLayout
        android:id="@+id/rl_serach_top"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_below="@id/view_top"
        android:background="#883e3e3e">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:padding="15dp"
            android:src="@mipmap/back" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/iv_back"
            android:background="@drawable/edit_text_bg">

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/iv_cancel"
                android:background="@null"
                android:hint="请输入歌手/歌曲名/专辑名"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/decker_gary" />

            <ImageView
                android:id="@+id/iv_cancel"
                android:layout_width="?actionBarSize"
                android:layout_height="?actionBarSize"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:src="@mipmap/cancel" />

        </RelativeLayout>

    </RelativeLayout>

    <include
        android:id="@+id/layout_player"
        layout="@layout/layout_player"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentBottom="true" />

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_player"
        android:layout_below="@id/rl_serach_top">

        <TextView
            android:id="@+id/tv_serach_null"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:text="抱歉,搜索不到如何歌曲!"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_height="200dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    >

</RelativeLayout>